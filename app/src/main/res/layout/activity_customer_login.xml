<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/qjsgradient"
    tools:context=".CustomerLoginActivity">

    <EditText
        android:id="@+id/emailCustomer"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/roundbox"
        android:ems="10"
        android:fontFamily="@font/slabo_13px"
        android:hint="@string/enteremail"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"  />

    <EditText
        android:id="@+id/passwordCustomer"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/emailCustomer"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/roundbox"
        android:ems="10"
        android:fontFamily="@font/slabo_13px"
        android:hint="@string/enterpass"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/loginCustomerBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/passwordCustomer"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/roundbox"
        android:fontFamily="@font/slabo_13px"
        android:text="@string/loginbutton"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/registerCustomerBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/passwordCustomer"
        android:layout_alignBottom="@+id/loginCustomerBtn"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/roundbox"
        android:fontFamily="@font/slabo_13px"
        android:text="@string/registerbutton"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="154dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="80dp"
        app:srcCompat="@drawable/send_message"/>
</RelativeLayout>