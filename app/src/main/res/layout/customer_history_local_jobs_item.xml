<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/histtitle"
                android:text="Title"/>
            <TextView
                android:layout_below="@+id/histtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/histdesc"
                android:text="job desc"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/histdesc"
                android:id="@+id/histloc"
                android:text="location" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/histloc"
                android:text="carpentry"
                android:id="@+id/histcat"
                />
            <TextView
                android:layout_below="@+id/histcat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/histtime"
                android:textSize="12dp"
                android:text="time"/>

            <TextView
                android:layout_below="@+id/histcat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/histstatus"
                android:textSize="12dp"
                android:text="posted"/>


            <TextView
                android:layout_below="@+id/histstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ridekey"
                android:visibility="gone"
                android:textSize="12dp"
                android:text="posted"/>


        </LinearLayout>


    </androidx.cardview.widget.CardView>



</RelativeLayout>