<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/qjsgradient"
    tools:context=".FreelancerLoginActivity">

    <EditText
        android:id="@+id/emailFreelancer"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/roundbox"
        android:ems="10"
        android:fontFamily="@font/slabo_13px"
        android:hint="@string/enteremail"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/passwordFreelancer"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/emailFreelancer"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/roundbox"
        android:ems="10"
        android:fontFamily="@font/slabo_13px"
        android:hint="@string/enterpass"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/btns"
        android:layout_below="@+id/passwordFreelancer"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/loginFreelancerBtn"
          android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="10dp"

            android:drawableStart="@drawable/ic_login"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_below="@+id/passwordFreelancer"

      android:layout_marginRight="5dp"
            android:background="@drawable/roundbox"
            android:fontFamily="@font/slabo_13px"
            android:text="@string/loginbutton"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/registerFreelancerBtn"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/passwordFreelancer"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"

            android:drawableStart="@drawable/ic_register"


            android:padding="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"


            android:background="@drawable/roundbox"
            android:fontFamily="@font/slabo_13px"
            android:text="@string/registerbutton"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="80dp"
        app:srcCompat="@drawable/logosplashwithtag" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btns"
        android:layout_marginTop="0dp"
        android:gravity="center">


        <Button
            android:layout_width="wrap_content"
            android:id="@+id/phonelogin"
            android:layout_height="wrap_content"
            android:text="PHONE"
            android:background="@drawable/roundbox"
            android:fontFamily="@font/slabo_13px"
           android:padding="12dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"

            android:drawableStart="@drawable/ic_otp"
            android:textStyle="bold"
            />

    </LinearLayout>

</RelativeLayout>